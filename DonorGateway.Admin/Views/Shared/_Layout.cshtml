@using DonorGateway.Admin.Helpers
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DonorGateway Administration</title>

    <!-- Theme style -->
    <link href="~/css/vendor.min.css" rel="stylesheet" />
    <link href="~/css/site.min.css?v=1.2" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition skin-black layout-top-nav">
    <div class="wrapper" ng-controller="NavController as pager">

        @Html.Partial("_NavBar")

        <!-- Full Width Column -->
        <div class="content-wrapper">
            <div class="container-fluid">
                @RenderBody()
            </div>
            <!-- /.container -->
        </div>
        <footer class="main-footer">
            <div class="container-fluid">
                <div class="pull-right hidden-xs">
                    <b>Version</b> @typeof(DonorGateway.Admin.MvcApplication).Assembly.GetName().Version
                </div>
                <strong>Copyright &copy; @DateTime.Now.Year </strong>
            </div>
            <!-- /.container -->
        </footer>
    </div>
    <!-- Vendor Libraries -->
    <script src="~/js/vendor.min.js?v1"></script>

    <script src="~/js/app.min.js?v1.4"></script>

    @RenderSection("scripts", required: false)
</body>
</html>